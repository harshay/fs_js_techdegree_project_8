doctype html
head
  title Books
  link(href='../public/stylesheets/style.css' rel='stylesheet')
h1 Books
p
  a.button(href='new_book.html') Create New Book
table
  thead
    tr
      th Title
      th Author
      th Genre
      th Year
  tbody
    each book in books
        tr
          td= book.title
          td= book.author
          td= book.genre
          td= book.year


